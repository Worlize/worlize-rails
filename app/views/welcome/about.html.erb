<%= title 'About' %>
<%= fancybox 'true' %>

<% content_for :extra_styles do %>
#about_header {
  position: relative;
  width: 850px;
  margin: 0px auto;
}
#about_header h1 {
  font-size: 80pt;
  line-height: 60pt;
  position:absolute;
  top: 60px;
  left: 350px;
  text-align:right;
}
#about_header h2 {
  font-family: PTSansNarrowRegular;
  font-size: 30pt;
  position: absolute;
  top: 150px;
  left: 350px;
}
#about_header h3 {
  font-family: PTSansNarrowRegular;
  font-size: 15pt;
  position: absolute;
  top: 200px;
  right: 50px;
}
#about_header h3 a {
  text-decoration: none;
  color: #656464;
}
#about_header h3 a:hover {
  color: #888;
}

#about_content img.infographic {
  display: block;
  margin: 40px auto 0px;
}

.infographic-descriptions {
  text-align:center;
}
.infographic-descriptions .panel {
  width: 230px;
  float:left;
}
#about_content .infographic-descriptions .panel h1 {
  font: 18pt/18pt PTSansNarrowBold, Helvetica, Arial, sans-serif;
}
.infographic-descriptions .panel p {
  
}


.infographic-descriptions .panel1 {
  margin-left: 65px;
}
.infographic-descriptions .panel2 {
  margin-left: 120px;
}
.infographic-descriptions .panel3 {
  margin-left: 75px;
}

#about_content h1 {
  text-align:center;
  margin: 30px auto 5px;
  font-family: PTSansNarrowBold;
  font-size: 35pt;
}

#about_content h1 a {
  text-decoration: none;
}

#about_content h2 {
  text-align: center;
  font-family: PTSansNarrowRegular;
  font-size: 18pt;
  color: #9a9a9a;
}
#watchVideoLink {
  cursor: pointer;
}
<% end %>

<% content_for :page_script do %>
<script>
  $('#watchVideoLink').click(function(event) {
    event.preventDefault();
  });
  $('#watchVideoLink').fancybox({
    type: 'iframe',
    href: 'http://player.vimeo.com/video/17431869?title=0&amp;byline=0&amp;portrait=0&amp;autoplay=1',
    width: 500,
    height: 298
  });
</script>
<% end %>

