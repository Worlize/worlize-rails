<div id="homepage-character">
  <img src="/images/homepage-jellies/<%= @character_name %>.jpg" alt="<%= @saying %>">
</div>

<div id="homepage_login_layer" style="display:none;">
  <%= form_for @user_session, :url => user_session_path do |f| %>
  <div class="formField">
    <%= f.label :username %>
    <%= f.text_field :username, :size => 15 %>
  </div>
  <div class="formField">
    <%= f.label :password %>
    <%= f.password_field :password, :size => 15 %>
  </div>
  <div class="formField">
    <%= f.submit "Sign in" %>
  </div>
  <% end %>
  <div style="clear:both;"></div>
</div>

<div id="homepage-login">
  connect
    <a href="/auth/facebook"><img src="/images/homepage-facebook-icon.png" alt="Log in with Facebook"></a>
    <a href="/auth/twitter"><img src="/images/homepage-twitter-icon.png" alt="Log in with Twitter"></a>
  <small>or</small>
  <%= link_to 'sign-up', new_registration_path %>.
  <small style="font-size: 60%;"><a id="homepage_login_link" href="/login">Already a member</a>?</small>

</div>


