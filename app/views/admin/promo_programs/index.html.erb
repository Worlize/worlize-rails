<h1>Listing Promo Programs</h1>

<% if @promo_programs.empty? %>
  (There are no promo programs defined.)
<% else %>
  <table cellspacing="0" cellpadding="0" border="0" class="datagrid" width="100%">
    <tr>
      <th width="40%">Name</th>
      <th width="12%">Start Date</th>
      <th width="13%">End Date</th>
      <th width="10%"># Items</th>
      <th width="15%"># Given Away</th>
      <th width="10%"></th>
    </tr>

  <% @promo_programs.each do |promo_program| %>
    <tr class="<%= cycle('even','odd') %>">
      <td><%= link_to promo_program.name, admin_promo_program_path(promo_program) %></td>
      <td><%= promo_program.start_date.strftime('%Y-%m-%d') %></td>
      <td><%= promo_program.end_date.strftime('%Y-%m-%d') %></td>
      <td><%= promo_program.marketplace_item_giveaways.count %></td>
      <td><%= promo_program.marketplace_item_giveaway_receipts.count %></td>
      <td><%= link_to 'Destroy', [:admin, promo_program],
                :confirm => 'Are you sure you want to delete this promo program?',
                :method => :delete %></td>
    </tr>
  <% end %>
  </table>
<% end %>
<br>
