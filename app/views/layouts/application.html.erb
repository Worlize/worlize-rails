  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <link rel="stylesheet" href="/stylesheets/main-fonts.css?v=2">

  <!-- CSS : implied media="all" -->
  <link rel="stylesheet" href="/stylesheets/main.css?v=3">
 
  <style type="text/css">
  <%= yield :extra_styles %>
  </style>
 
  <!-- All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects -->
  <script src="/javascripts/libs/modernizr-1.6.min.js"></script>
  
  <%= csrf_meta_tag %>

</head>

<body>

  <div id="container">
    <header>
        <% if current_user %>
          <%= render :partial => 'layouts/logged_in_header' %>
        <% elsif !@hide_login_bar %>
          <%= render :partial => 'layouts/log_in_form_header' %>
        <% end %>
    </header>

    <% if flash[:notice] %>
    <div id="flash_notice">
      <%= flash[:notice] %>
    </div>
    <% end %>
    
    <div id="main">
      <%= yield %>
    </div>
    
    <footer>
      <div class="footer-background"></div>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'Press', press_path %></li>
          <li><a href="http://blog.worlize.com/">Our Blog</a></li>
        </ul>
      </nav>
      <div class="copyright">Â© 2010 Worlize Inc.</div>
    </footer>
  </div> <!--! end of #container -->


  <!-- Javascript at the bottom for fast page loading -->
