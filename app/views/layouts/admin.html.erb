<!DOCTYPE HTML>
<html>
<head>
  <meta charset="utf-8">
  <title>Worlize - Your World Realized</title>
  <!--[if lte IE 8]>
  <script src="/javascripts/html5.js" type="text/javascript"></script>
  <![endif]-->
  <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.1.1/build/cssreset/reset-min.css">
  <link rel="stylesheet" href="/stylesheets/admin.css" type="text/css" media="screen" title="Main Stylesheet" charset="utf-8">
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <header>
      <div id="loginLinks">
        <% if current_user %>
          <%= link_to "Logout", logout_path %>
        <% else %>
          <%= link_to "Sign Up", new_user_path %> |
          <%= link_to "Login", login_path %>
        <% end %>
      </div>

      <h1>Worlize</h1>
    </header>
    <% if flash[:notice] %> 
    <section id="flashNotice">
      <%= flash[:notice] %>
    </section>
    <% end %>

    <section id="pageContent">
      <%= yield %>
    </section>

    <footer>
    
    </footer>
  </div>
</body>
</html>
