<head>
  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame 
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Worlize - Admin</title>
  <meta name="description" content="Worlize Admin">

  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- CSS : implied media="all" -->
  <link rel="stylesheet" href="/stylesheets/admin.css">

  <!-- All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects -->
  <script src="/javascripts/libs/modernizr-1.6.min.js"></script>

  <%= javascript_include_tag :defaults %>
  
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js" type="text/javascript" charset="utf-8"></script>
  
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <header>
      <div id="loginLinks">
        <% if current_user %>
          <span class="username">
            Logged in as <%= current_user.username %>
          </span>
          <%= link_to "Logout", logout_path %>
        <% else %>
          <%= link_to "Sign Up", new_user_path %> |
          <%= link_to "Login", login_path %>
        <% end %>
      </div>

      <h1><%= link_to "Worlize Admin", admin_index_path %></h1>
    </header>

    <% if flash[:notice] %> 
    <section id="flashNotice">
      <%= flash[:notice] %>
    </section>
    <% end %>
    <% if flash[:error] %> 
    <section id="flashError">
      <%= flash[:error] %>
    </section>
    <% end %>

    <%= render :partial => 'admin/menu' %>

    <section id="pageContent">
      <%= yield %>
    </section>

    <footer>
      Copyright Â© 2010-<%= Date.today.year %> Worlize Inc.  All Rights Reserved.
    </footer>
    
    <!--[if lt IE 7 ]>
      <script src="javascripts/libs/dd_belatedpng.js"></script>
      <script> DD_belatedPNG.fix('img, .png_bg'); //fix any <img> or .png_bg background-images </script>
    <![endif]-->

  </div>
</body>
</html>
